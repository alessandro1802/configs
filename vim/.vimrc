" Syntax adaptation
filetype on
filetype indent on
syntax on

" Colorscheme
set background=dark
colorscheme PaperColor

" Hybrid line numbering
set number relativenumber

" Highlight the line under the cursor 
set cursorline

" Tab width
set tabstop=4

" Don't wrap long lines
set nowrap

" Menu auto-completion on 'Tab'
set wildmenu

" Show status line
set laststatus=2
